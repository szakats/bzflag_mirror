build_run
-> 0.2 : sky_run
-> 0.6 : build_2
-> 0.2 : build_1
;

build_2 
-> 0.3 : mat_glass extrude(4.0) [ build_entry * build_entry * ] build_2cont
-> 0.3 : mat_glass extrude(4.0) [ * build_entry * build_entry ] build_2cont
-> 0.2 : mat_wall2 extrude(3.7) [ * build_entry * build_entry ] extrude(0) expand(1.0) build_2cont
-> 0.1 : mat_wall2 extrude(random(12.0,40.0,4.0)) [ * build_insetwall * build_insetwall ] roof_run
-> 0.1 : mat_wall2 extrude(random(12.0,40.0,4.0)) [ build_insetwall * build_insetwall * ] roof_run
;

build_1
-> 0.3 : mat_wall extrude(4.0) [ build_entry * build_entry * ] build_1cont
-> 0.3 : mat_wall extrude(4.0) [ * build_entry * build_entry ] build_1cont
-> 0.2 : mat_wall extrude(random(12.0,40.0,4.0)) [ * build_insetwall * build_insetwall ] roof_run
-> 0.2 : mat_wall extrude(random(12.0,40.0,4.0)) [ build_insetwall * build_insetwall * ] roof_run
;

build_entry -> partitionh(face(h)/2 - 2.0) partitionh(4.0) [ build_entrydoor ] ;

build_entrydoor -> extrude(-2.0) mat_roof ; 

build_1cont
-> 0.5 : common_ledge mat_wall extrude(3.7) build_1cont
-> 0.2 : common_ledge mat_wall extrude(3.7) [ @build_insetwall ] build_1cont
-> 0.3 : roof_run
;

build_2cont
-> 0.6 : common_ledge mat_wall2 extrude(3.7) build_2cont
-> 0.2 : common_ledge mat_wall2 extrude(3.7) [ @build_insetwall ] build_2cont
-> 0.2 : roof_run
;

build_insetwall
-> 0.8 : subdivideh(3) [ * build_inset * ] 
-> 0.2 : subdivideh(3) [ * common_inset5 * ] 
;

build_inset -> extrude(-3.0) mat_glass ;

